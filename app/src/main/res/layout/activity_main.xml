<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.yiyang.getlocation.MainActivity">

    <TextView
        android:id="@+id/txtLocInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="19dp"
        android:text="Location Information"
        app:layout_constraintLeft_toLeftOf="@+id/btnSetup"
        app:layout_constraintTop_toBottomOf="@+id/btnSetup" />

    <Button
        android:id="@+id/btnSetup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="23dp"
        android:layout_marginTop="16dp"
        android:onClick="setup"
        android:text="設定定位功能"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnGetAddr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-7dp"
        android:layout_marginTop="35dp"
        android:onClick="getAddr"
        android:text="查詢地址"
        app:layout_constraintLeft_toLeftOf="@+id/btnSetup"
        app:layout_constraintTop_toBottomOf="@+id/txtLocInfo" />

    <TextView
        android:id="@+id/txtAddrInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-7dp"
        android:layout_marginTop="23dp"
        android:inputType="textMultiLine"
        android:text="Address Information"
        app:layout_constraintLeft_toLeftOf="@+id/btnGetAddr"
        app:layout_constraintTop_toBottomOf="@+id/btnGetAddr" />

</android.support.constraint.ConstraintLayout>
